<% content_for(:html_title, 'パスワード変更') %>
<div class="container py-5">
  <div class="row my-5">
    <p class="col-sm-4 display-6 offset-sm-4 border border-dark text-center py-3 mt-5 rounded-pill bg-light shadow">パスワード変更</p>
  </div>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="row my-5">
    <div class="col-sm-10 offset-sm-1 border border-dark text-center p-3 shadow rounded bg-light">
      <%= form_with model: @user, url: user_password_path, method: :put, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="field my-3">
          <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-8 offset-2 my-5 col-sm-6 offset-sm-3" %>
        </div>
        <div class="field my-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-8 offset-2 my-5 col-sm-6 offset-sm-3" %>
        </div>
        <div class="actions my-3">
          <%= f.submit "登録する", class: "btn btn-dark my-5" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
